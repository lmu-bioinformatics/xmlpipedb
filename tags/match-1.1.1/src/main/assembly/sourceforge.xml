<assembly>
    <id>sourceforge</id>
    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>
    <fileSets>
        <!-- Basic documentation. -->
        <fileSet>
            <includes>
                <include>README*</include>
                <include>LICENSE*</include>
            </includes>
        </fileSet>
        <!-- Classes. -->
        <fileSet>
            <directory>target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory></outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
