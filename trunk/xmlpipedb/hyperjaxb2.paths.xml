<?xml version="1.0"?>
<project name="hyperjaxb2.paths" default="hyperjaxb2.paths.set">
	<!-- ... -->
	<property file="jaxbcommons.properties"/>
	<property file="hyperjaxb2.properties"/>
	<import file="${jaxbcommons.paths.xml.file}"/>
	<!-- ... -->
	<condition property="hyperjaxb2.integrated">
		<not>
			<available file="${basedir}/../hyperjaxb2"/>
		</not>
	</condition>
	<!-- ... -->
	<target name="hyperjaxb2.path.set.standalone" if="hyperjaxb2.integrated">
		<path id="hyperjaxb2.path">
			<fileset dir="${hyperjaxb2.dist.dir}">
				<include name="hyperjaxb2.jar"/>
			</fileset>
		</path>
	</target>
	<!-- ... -->
	<target name="hyperjaxb2.path.set.integrated" unless="hyperjaxb2.integrated">
		<echo>Non-integrated hyperjaxb2.</echo>
		<path id="hyperjaxb2.path">
			<pathelement location="${hyperjaxb2.dir}/classes"/>
			<pathelement location="${hyperjaxb2.dir}/generated.classes/hibernate"/>
			<pathelement location="${hyperjaxb2.dir}/generated.classes/hyperjaxb2"/>
		</path>
	</target>
	<!-- ... -->
	<target name="hyperjaxb2.path.set" depends="hyperjaxb2.path.set.integrated, hyperjaxb2.path.set.standalone"/>

	<!-- ... -->
	<target name="hyperjaxb2.paths.set" depends="jaxbcommons.paths.set, hyperjaxb2.path.set">
	<path id="log4j.properties.path">
		<pathelement location="${hyperjaxb2.dir}\log4j"/>
	</path>
	<!-- ... -->
	<path id="hibernate.path">
		<fileset dir="${hyperjaxb2.lib.dir}/hibernate">
			<include name="hibernate3.jar"/>
			<include name="asm.jar"/>
			<include name="cglib.jar"/>
		</fileset>
	</path>
	<path id="jta.path">
		<fileset dir="${hyperjaxb2.lib.dir}/j2ee">
			<include name="jta.jar"/>
		</fileset>
	</path>

	<path id="dom4j.path">
		<fileset dir="${hyperjaxb2.lib.dir}/dom4j">
			<include name="dom4j.jar"/>
		</fileset>
	</path>
	
	<path id="pgdb.path">
		<fileset dir="${hyperjaxb2.lib.dir}/pgdb">
			<include name="postgresql-8.1-405.jdbc3.jar"/>
		</fileset>
	</path>
	
	<path id="jaxbcommons.compile.generated.sources.classpath">
		<path refid="junit.path"/>
		<path refid="jaxbcommons.path"/>
		<path refid="jaxb.path"/>
		<path refid="hibernate.path"/>
		<path refid="hyperjaxb2.path"/>
	</path>
	<!-- ... -->
	<path id="jaxbcommons.xjc.classpath">
		<path refid="dom4j.path"/>
		<path refid="jaxbcommons.path"/>
		<path refid="jaxb.path"/>
		<path refid="jakarta-commons.path"/>
		<path refid="hibernate.path"/>
		<path refid="log4j.path"/>
		<path refid="log4j.properties.path"/>
		<path refid="hyperjaxb2.path"/>
		<path refid="junit.path" />
	</path>
	<!-- ... -->
	<path id="xsddoc.path">
		<fileset dir="${hyperjaxb2.lib.dir}/xsddoc">
			<include name="xsddoc.jar"/>
			<include name="xalan.jar"/>
		</fileset>
	</path>
	<path id="xsddoc.classpath">
		<path refid="xsddoc.path"/>
	</path>
	<path id="hyperjaxb2.compile.classpath">
		<path refid="dom4j.path" />
		<path refid="hibernate.path" />
		<path refid="jakarta-commons.path" />
		<path refid="jaxbcommons.path" />
		<path refid="jaxb.path" />
		<path refid="junit.path" />
		<pathelement location="${generated.classes.dir}/hibernate"/>
		<pathelement location="${generated.classes.dir}/hyperjaxb2"/>
	</path>
	<path id="hyperjaxb2.runtime.classpath">
		<path refid="dom4j.path" />
		<path refid="hibernate.path" />
		<path refid="hyperjaxb2.path" />
		<path refid="jakarta-commons.path" />
		<path refid="jaxbcommons.path" />
		<path refid="jaxb.path" />
		<path refid="junit.path" />
		<path refid="jta.path" />
		<path refid="log4j.path"/>
		<path refid="log4j.properties.path"/>
	</path>
	</target>
</project>