<?xml version="1.0"?>
<project name="jaxbcommons.paths" default="jaxbcommons.paths.set">
	<!-- ... -->
	<condition property="jaxbcommons.integrated">
		<not>
			<available file="${basedir}/../jaxbcommons"/>
		</not>
	</condition>
	<!-- ... -->
	<target name="jaxbcommons.path.set.integrated" if="jaxbcommons.integrated">
		<echo>Integrated jaxbcommons.</echo>
		<path id="jaxbcommons.path">
			<fileset dir="${jaxbcommons.dist.dir}">
				<include name="jaxbcommons.jar"/>
			</fileset>
		</path>
	</target>
	<!-- ... -->
	<target name="jaxbcommons.path.set.non-integrated" unless="jaxbcommons.integrated">
		<echo>Non-integrated jaxbcommons.</echo>
		<path id="jaxbcommons.path">
			<pathelement location="${jaxbcommons.dir}/classes"/>
		</path>
	</target>
	<!-- ... -->
	<target name="jaxbcommons.path.set" depends="jaxbcommons.path.set.integrated, jaxbcommons.path.set.non-integrated"/>
	<!-- ... -->
	<target name="jaxbcommons.paths.set" depends="jaxbcommons.path.set">
		<!-- ... -->
		<property name="jaxbcommons.lib.dir" location="${jaxbcommons.dir}/lib"/>
		<!-- ... -->
		<path id="jaxb.path">
			<fileset dir="${jaxbcommons.lib.dir}/jaxp">
				<include name="jaxp-api.jar"/>
			</fileset>
			<fileset dir="${jaxbcommons.lib.dir}/dom">
				<include name="dom.jar"/>
			</fileset>
			<fileset dir="${jaxbcommons.lib.dir}/sax">
				<include name="sax.jar"/>
			</fileset>
			<fileset dir="${jaxbcommons.lib.dir}/xalan">
				<include name="xalan.jar"/>
			</fileset>
			<fileset dir="${jaxbcommons.lib.dir}/xerces">
				<include name="xercesImpl.jar"/>
			</fileset>
			<fileset dir="${jaxbcommons.lib.dir}/jaxb">
				<include name="jax-qname.jar"/>
				<include name="jaxb-api.jar"/>
				<include name="jaxb-impl.jar"/>
				<include name="jaxb-libs.jar"/>
				<include name="jaxb-xjc.jar"/>
				<include name="namespace.jar"/>
				<include name="relaxngDatatype.jar"/>
				<include name="xsdlib.jar"/>
			</fileset>
		</path>
		<!-- ... -->
		<path id="junit.path">
			<fileset dir="${jaxbcommons.lib.dir}/junit">
				<include name="junit.jar"/>
			</fileset>
		</path>
		<!-- ... -->
		<path id="jakarta-commons.path">
			<fileset dir="${jaxbcommons.lib.dir}/jakarta-commons">
				<include name="commons-beanutils.jar"/>
				<include name="commons-collections.jar"/>
				<include name="commons-lang.jar"/>
				<include name="commons-logging.jar"/>
				<include name="commons-io.jar"/>
			</fileset>
		</path>
		<!-- ... -->
		<path id="log4j.path">
			<fileset dir="${jaxbcommons.lib.dir}/log4j">
				<include name="log4j.jar"/>
			</fileset>
		</path>
		<path id="log4j.properties.path">
			<pathelement location="${jaxbcommons.dir}\log4j"/>
		</path>
		<path id="spring.path">
			<fileset dir="${jaxbcommons.lib.dir}/spring">
				<include name="spring.jar"/>
				<include name="spring-mock.jar"/>
			</fileset>
		</path>
		<!-- ... -->
		<path id="jaxbcommons.xjc.classpath">
			<path refid="jaxbcommons.path"/>
			<path refid="jaxb.path"/>
			<path refid="jakarta-commons.path"/>
			<path refid="junit.path"/>
			<path refid="spring.path"/>
			<path refid="log4j.path"/>
			<path refid="log4j.properties.path"/>
		</path>
		<!-- ... -->
		<path id="jaxbcommons.compile.generated.sources.classpath">
			<path refid="junit.path"/>
			<path refid="jaxbcommons.path"/>
			<path refid="jaxb.path"/>
			<path refid="spring.path"/>
		</path>
		<!-- ... -->
		<path id="jaxbcommons.compile.classpath">
			<path refid="jakarta-commons.path" />
			<path refid="jaxb.path" />
			<path refid="junit.path"/>
			<path refid="spring.path"/>
		</path>
	</target>
</project>