<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping
        auto-import="false"
>
    <class
        name="generated.impl.BookTypeImpl"
        table="BookType"
        dynamic-update="false"
        dynamic-insert="false"
        select-before-update="false"
    >

        <id
            name="idInternal"
            column="idInternal"
            type="java.lang.String"
            length="32"
            unsaved-value="null"
        >
            <generator class="uuid.hex">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-BookTypeImpl.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="price"
            type="java.math.BigDecimal"
            update="true"
            insert="true"
            access="property"
            column="price"
        />

        <property
            name="genre"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="genre"
        />

        <many-to-one
            name="author"
            class="generated.impl.AuthorNameImpl"
            cascade="all"
            outer-join="auto"
            update="true"
            insert="true"
            access="property"
            column="author"
        />

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="title"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-BookTypeImpl.xml
            containing the additional properties and place it in your merge dir.
        -->

        <joined-subclass
            name="generated.impl.BookstoreTypeImpl$BookImpl"
            table="BookstoreType$Book"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="parentid"
        />

        </joined-subclass>

    </class>

</hibernate-mapping>
